<%= form_for @user, :remote => true do |f| %>

  <%= f.text_field :username, placeholder: "Username" %>
  <%= f.text_field :email, placeholder: "Email" %>
  <%= f.password_field :password, placeholder: "Password" %>

  <%= f.submit "Sign Up" %>
<% end %>

<%= form_tag(:root, method: :get, remote: true) do %>
  <%= submit_tag "Cancel" %>
<% end %>

<% if @user.errors.any? %>
  <p>Uh oh</p>
<% end %>