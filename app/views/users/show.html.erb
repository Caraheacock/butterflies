<h2><%= @user.username %>'s Stats</h2>

<% if @personal_top_games == [nil] %>
  <h3><%= @user.username %> hasn't played any games yet! ):</h3>
<% else %>
  <table>
    <thead>
      <th>Score</th>
      <th>Level Reached</th>
      <th>Date</th>
    </thead>
    <tbody>
      <% @personal_top_games.each do |game| %>
        <tr>
          <td><%= game.final_score %></td>
          <td><%= game.level_num %></td>
          <td><%= game.pretty_time(game.updated_at) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
