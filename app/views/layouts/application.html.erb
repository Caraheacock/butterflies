<!DOCTYPE html>
<html>
<head>
  <title>Butterflies</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="container">
  <div id="nav">
    <ul id="nav_links">
      <li><%= link_to("New Game", :root, id: "new_game") %></li>
      
      <% #if current_user %>
        <li><a href="#">Welcome!</a></li>
        <li><%= link_to("Your Stats")%></li>
      <% #else %>
        <li><%= link_to("Sign In", :new_login, :remote => true) %></li>
        <li><%= link_to("Sign Up") %></li>
      <% #end %>
      
        <li><%= link_to("High Scores") %></li>
        
      <% #if current_user %>
        <li><%= link_to("Sign Out") %></li>
      <% #end %>
    </ul>
    <div id="login_form" style="display: none;"><%= render :partial => '/logins/form' %></div>
  </div>
  
  <div id="content">
    <%= yield %>
  </div>
  
  <div id="footer">
    <h1>Lydia Butterfly</h1>
  </div>
  
</div>

</body>
</html>
